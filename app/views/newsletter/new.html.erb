<h1 class="brown-text">Send a T-Shirt Townletter</h1>

<%= form_tag newsletter_index_path do %>

    <%= label_tag 'Subject' %>
    <%= text_field_tag 'subject', nil, cols: '20', rows: '6', required: true, class: 'input-field' %>
    <%= label_tag 'Emails (*comma separated)' %>
    <%= text_field_tag 'emails', nil, required: true, cols: '20', rows: '6', class: 'input-field' %>
    <%= label_tag 'Newsletter Type' %>
      <%= select_tag "newsletter", options_for_select(['weekly', 'monthly']), class: 'input-field' %>
  <br />
  <%= submit_tag 'Send', class: 'orange darken-4 btn' %>
<% end %>

