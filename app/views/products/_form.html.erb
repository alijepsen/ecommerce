<div class="container">
  <div class="row">
    <%= form_for [@category, @product], html: { multipart: true} do |f| %>
      <div class="col m6">
        <%= f.label :name, class: 'brown-text' %>
        <%= f.text_field :name, required: true %>
      </div>
      <div class="col m6">
        <%= f.label :description %>
        <%= f.text_field :description %>
      </div>
      <div class="col m6">
        <%= f.label :price %>
        <%= f.number_field :price, value: number_to_currency(f.object.price.to_f, delimiter: '', unit: ''), step: :any %>
      </div>
      <div class="col m6">
        <%= f.label :inventory %>
        <%= f.number_field :inventory %>
      </div>
      <div class="file-field input-field col s6 offset-s4">
        <div class="btn orange accent-4">
          <span>Add Image</span>
        </div>
        <div class="file-path-wrapper">
          <!--<input class="file-path validate" type="text">-->
          <%= f.file_field :avatar %>
        </div>
      </div>
      </div>
      <div class="center">
      <%= f.submit class: "btn brown white-text" %>
       </div>
    <% end %>

  </div>
</div>
