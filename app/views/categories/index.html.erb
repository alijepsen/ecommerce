<h2 class="brown">Shops</h2>
<% if @categories.any? %>
  <table>
    <thead>
      <tr>
        <th>Shop Name</th>
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= link_to category.style, category_products_path(category) %></td>
            <% if user_signed_in? %>
            <% if current_user.id == category.user_id %>
          <td><%= link_to 'Edit', edit_category_path(category) %></td>
          <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h3>No shops yet, add one!</h3>
<% end %>

<br>
<%= link_to "Add Shop", new_category_path, class: 'brown btn' %>

