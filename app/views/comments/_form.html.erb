<div class="container">
  <div class="row">
    <%= form_for [@product, @comment] do |f| %>
       <div class="col s12">
        <%= f.label :rating %>
      </div>

      <div class="col s2">
        <%= f.radio_button(:rating, 1, required: true) %>
        <%= f.label(:rating_1, "1") %>
      </div>

      <div class="col s2">
        <%= f.radio_button(:rating, 2) %>
        <%= f.label(:rating_2, "2") %>
      </div>

      <div class="col s2">
        <%= f.radio_button(:rating, 3) %>
        <%= f.label(:rating_3, "3") %>
      </div>

      <div class="col s2">
        <%= f.radio_button(:rating, 4) %>
        <%= f.label(:rating_4, "4") %>
      </div>

      <div class="col s2">
        <%= f.radio_button(:rating, 5) %>
        <%= f.label(:rating_5, "5") %>
      </div>

      <div class="col s12">
        <br>
        <%= f.label :review %>
        <%= f.text_area :review, required: true %>
      </div>

      <div class="col s12 center">
      <%= f.submit class: "btn brown white-text" %>
      </div>
    <% end %>
  </div>
</div>
